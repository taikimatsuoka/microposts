<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
  
</h1>
<h2>プロフィールの編集</h2>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>


  <%= f.label :location %>
  <%= f.text_field :location %>
  
    <%= f.label :email %>
  <%= f.text_field :email %>
  
    <%= f.label :about %>
  <%= f.text_area :about %>
  
  <%= f.submit %>
<% end %>
